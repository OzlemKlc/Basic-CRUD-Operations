@model basic_crud_operations.Models.Product


  
<div>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
        </tr>
        <tr>
            <td>@Html.DisplayFor(model => model.Name)</td>
            <td>@Html.DisplayFor(model => model.Price)</td>
            <td>@Html.DisplayFor(model => model.Stock)</td>
        </tr>
    </table>
</div>

<form asp-action="Delete" onsubmit=" return confirm('Are you sure you want to delete this record?');">
       <input type="hidden" asp-for="Id" />
       <input type="submit" value="Delete" class="btn btn-danger" /> |
       <a asp-action="Index">Back to List</a>
   </form>
   

